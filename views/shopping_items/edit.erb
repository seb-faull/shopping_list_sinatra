<h1>Edit Item Form</h1>

<form action="/shopping_items/<%= @id %>" method="POST">
	
	<label for="title"> Title: </label>
	<input type="text" name="title" value="<%= @shopping_item[:title] %>">

	<label for="body"></label>
	<textarea name="body"> <%= @shopping_item[:body] %> </textarea>

	<input type="hidden" name="_method" value="PUT">

	<input type="submit" value="Update">

</form>